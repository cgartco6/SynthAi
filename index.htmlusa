    <!-- AI Pricing Form -->
    <section id="pricing-form" class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="ai-pricing-form">
                        <div class="row mb-4">
                            <div class="col">
                                <h3 class="fw-bold">AI Project Pricing</h3>
                                <p class="text-muted">Describe your project and our AI will instantly provide a price estimate</p>
                            </div>
                            <div class="col-auto">
                                <span class="security-badge"><i class="fas fa-shield-alt me-1"></i> Military-Grade Security</span>
                            </div>
                        </div>
                        
                        <form id="projectForm">
                            <div class="mb-4">
                                <label for="projectDescription" class="form-label fw-bold">Project Description</label>
                                <textarea class="form-control" id="projectDescription" rows="5" placeholder="Describe your project in detail..."></textarea>
                                <div class="form-text">Be as detailed as possible for the most accurate pricing.</div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="projectType" class="form-label fw-bold">Project Type</label>
                                    <select class="form-select" id="projectType">
                                        <option value="">Select project type</option>
                                        <option value="web">Web Application</option>
                                        <option value="mobile">Mobile App</option>
                                        <option value="ai">AI/ML Solution</option>
                                        <option value="ecommerce">E-commerce Platform</option>
                                        <option value="enterprise">Enterprise Software</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="complexity" class="form-label fw-bold">Estimated Complexity</label>
                                    <select class="form-select" id="complexity">
                                        <option value="">Select complexity level</option>
                                        <option value="simple">Simple (Basic features)</option>
                                        <option value="medium">Medium (Standard features)</option>
                                        <option value="complex">Complex (Advanced features)</option>
                                        <option value="very-complex">Very Complex (Cutting-edge tech)</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="timeline" class="form-label fw-bold">Desired Timeline</label>
                                    <select class="form-select" id="timeline">
                                        <option value="">Select timeline</option>
                                        <option value="flexible">Flexible (3+ months)</option>
                                        <option value="standard">Standard (1-3 months)</option>
                                        <option value="urgent">Urgent (2-4 weeks)</option>
                                        <option value="asap">ASAP (1-2 weeks)</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="teamSize" class="form-label fw-bold">Preferred Team Size</label>
                                    <select class="form-select" id="teamSize">
                                        <option value="">Select team size</option>
                                        <option value="solo">Solo Developer</option>
                                        <option value="small">Small Team (2-3)</option>
                                        <option value="medium">Medium Team (4-6)</option>
                                        <option value="large">Large Team (7+)</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <button type="button" class="btn btn-primary btn-lg" id="calculatePrice">
                                    <i class="fas fa-calculator me-2"></i>Calculate Price
                                </button>
                            </div>
                        </form>
                        
                        <div id="priceResult" class="mt-4 p-4 bg-light rounded d-none">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h4 class="fw-bold mb-1">Estimated Project Cost</h4>
                                    <p class="mb-0" id="projectSummary">Based on your description and selections</p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <h2 class="fw-bold text-primary" id="calculatedPrice">$0</h2>
                                    <button class="btn btn-accent mt-2">Proceed to Checkout</button>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <h5>AI Analysis Breakdown</h5>
                                <div class="ai-helper">
                                    <i class="fas fa-brain"></i>
                                    <div>
                                        <h6 class="mb-1">Project Analyzer</h6>
                                        <p class="mb-0 small" id="analyzerResult">Analyzing project requirements...</p>
                                    </div>
                                </div>
                                <div class="ai-helper">
                                    <i class="fas fa-cogs"></i>
                                    <div>
                                        <h6 class="mb-1">Tech Recommender</h6>
                                        <p class="mb-0 small" id="techResult">Recommending technologies...</p>
                                    </div>
                                </div>
                                <div class="ai-helper">
                                    <i class="fas fa-chart-line"></i>
                                    <div>
                                        <h6 class="mb-1">Pricing Engine</h6>
                                        <p class="mb-0 small" id="pricingResult">Calculating fair pricing...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

