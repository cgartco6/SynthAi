    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('calculatePrice').addEventListener('click', function() {
            // Get form values
            const description = document.getElementById('projectDescription').value;
            const projectType = document.getElementById('projectType').value;
            const complexity = document.getElementById('complexity').value;
            const timeline = document.getElementById('timeline').value;
            const teamSize = document.getElementById('teamSize').value;
            
            // Validate form
            if (!description || !projectType || !complexity || !timeline || !teamSize) {
                alert('Please fill in all fields to get an accurate price estimate.');
                return;
            }
            
            // Show loading state
            const calculateBtn = document.getElementById('calculatePrice');
            calculateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Analyzing...';
            calculateBtn.disabled = true;
            
            // Simulate AI processing with a delay
            setTimeout(function() {
                // Calculate base price based on project type and complexity
                let basePrice = 0;
                
                // Base prices by project type
                const typePrices = {
                    'web': 5000,
                    'mobile': 8000,
                    'ai': 15000,
                    'ecommerce': 10000,
                    'enterprise': 20000,
                    'other': 7000
                };
                
                // Complexity multipliers
                const complexityMultipliers = {
                    'simple': 0.7,
                    'medium': 1.0,
                    'complex': 1.5,
                    'very-complex': 2.2
                };
                
                // Timeline multipliers (urgency premium)
                const timelineMultipliers = {
                    'flexible': 0.9,
                    'standard': 1.0,
                    'urgent': 1.3,
                    'asap': 1.7
                };
                
                // Team size multipliers
                const teamSizeMultipliers = {
                    'solo': 0.8,
                    'small': 1.0,
                    'medium': 1.3,
                    'large': 1.8
                };
                
                basePrice = typePrices[projectType] * complexityMultipliers[complexity] * 
                           timelineMultipliers[timeline] * teamSizeMultipliers[teamSize];
                
                // Add description length factor (longer descriptions might indicate more complex projects)
                const descLength = description.length;
                if (descLength > 1000) basePrice *= 1.2;
                else if (descLength > 500) basePrice *= 1.1;
                
                // Round to nearest 100
                basePrice = Math.round(basePrice / 100) * 100;
                
                // Update the UI with the calculated price
                document.getElementById('calculatedPrice').textContent = '$' + basePrice.toLocaleString();
                
                // Generate AI analysis text based on selections
                const projectTypes = {
                    'web': 'web application',
                    'mobile': 'mobile application',
                    'ai': 'AI/ML solution',
                    'ecommerce': 'e-commerce platform',
                    'enterprise': 'enterprise software',
                    'other': 'custom project'
                };
                
                const complexityText = {
                    'simple': 'relatively simple',
                    'medium': 'moderately complex',
                    'complex': 'highly complex',
                    'very-complex': 'extremely complex'
                };
                
                document.getElementById('projectSummary').textContent = 
                    `A ${complexityText[complexity]} ${projectTypes[projectType]} with ${teamSize} team and ${timeline} timeline.`;
                
                // Update AI analysis breakdown
                document.getElementById('analyzerResult').textContent = 
                    `Identified as a ${complexityText[complexity]} project requiring specialized attention.`;
                
                // Tech recommendations based on project type
                const techRecommendations = {
                    'web': 'React.js, Node.js, MongoDB',
                    'mobile': 'React Native, Firebase, Redux',
                    'ai': 'Python, TensorFlow, PyTorch',
                    'ecommerce': 'Shopify API, Stripe, React',
                    'enterprise': 'Java Spring Boot, MySQL, Docker',
                    'other': 'Custom technology stack based on requirements'
                };
                
                document.getElementById('techResult').textContent = 
                    `Recommended technologies: ${techRecommendations[projectType]}.`;
                
                document.getElementById('pricingResult').textContent = 
                    `Calculated fair market price based on ${projectTypes[projectType]} complexity and timeline.`;
                
                // Show the result section
                document.getElementById('priceResult').classList.remove('d-none');
                
                // Reset button
                calculateBtn.innerHTML = '<i class="fas fa-calculator me-2"></i>Calculate Price';
                calculateBtn.disabled = false;
            }, 2000); // 2 second delay to simulate AI processing
        });
    </script>
